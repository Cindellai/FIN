<div class="relative flex flex-grow !flex-row flex-col items-center rounded-[10px] border-[1px] border-gray-200 bg-white bg-clip-border shadow-md shadow-[#F3F3F3] dark:border-[#ffffff33] dark:!bg-navy-800 dark:text-white dark:shadow-none">
  <div class="ml-[18px] flex h-[90px] w-auto flex-row items-center">
    <div class="rounded-full bg-lightPrimary p-3 dark:bg-navy-700">
      <span class="flex items-center text-brand-500 dark:text-white">
        <%= yield :icon %>
      </span>
    </div>
  </div>
  <div class="h-50 ml-4 flex w-auto flex-col justify-center">
    <p class="font-dm text-sm font-medium text-gray-600"><%= yield :label %></p>
    <h4 class="text-xl font-bold text-navy-700 dark:text-white"><%= yield :value %></h4>
  </div>
</div>
