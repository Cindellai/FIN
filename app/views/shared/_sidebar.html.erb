<div class="w-80 pr-4 bg-white shadow-lg rounded-lg p-4 fixed top-16 left-0 h-full overflow-y-auto">
  <h2 class="text-xl font-semibold mb-4">Following</h2>
  <ul class="space-y-4">
    <% current_user.subscribed_traders.each do |trader| %>
      <li class="flex items-center p-2 bg-gray-100 rounded-xl">
        <% if trader.profile_picture.attached? %>
          <%= image_tag trader.profile_picture, class: 'w-12 h-12 rounded-full object-cover mr-4' %>
        <% else %>
          <div class="w-12 h-12 rounded-full bg-gray-300 mr-4"></div>
        <% end %>
        <%= link_to "#{trader.first_name} #{trader.last_name}", user_path(trader), class: 'text-black font-medium' %>
      </li>
    <% end %>
  </ul>
</div>
