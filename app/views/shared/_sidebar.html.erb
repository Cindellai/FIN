<div class="w-72 bg-gradient-to-b from-gray-50 to-white shadow-xl rounded-xl p-4 fixed top-39 left-10 right-10 h-300 overflow-y-auto border border-gray-300">
  <h2 class="text-2xl font-bold mb-6 text-center text-gray-700">Following</h2>
  <ul class="space-y-4">
    <% current_user.subscribed_traders.limit(6).each do |trader| %>
      <li class="flex items-center p-3 hover:bg-blue-50 rounded-lg transition duration-300 ease-in-out">
        <% if trader.profile_picture.attached? %>
          <%= image_tag trader.profile_picture, class: 'w-12 h-12 rounded-full object-cover mr-4 shadow-md' %>
        <% else %>
          <div class="w-12 h-12 rounded-full bg-gray-300 mr-4 shadow-md"></div>
        <% end %>
        <div>
          <%= link_to "#{trader.first_name} #{trader.last_name}", user_path(trader), class: 'text-gray-900 text-sm font-semibold hover:text-blue-600' %>
          <p class="text-xs text-gray-500 mt-1"><%= pluralize(trader.posts.count, 'post') %></p>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="mt-6 text-center">
    <%= link_to subscriptions_path(current_user), class: "relative inline-flex items-center justify-center px-6 py-2 text-white bg-blue-500 rounded-full shadow-lg hover:bg-blue-600 focus:outline-none transition duration-300 ease-in-out" do %>
      View All
    <% end %>
  </div>
</div>


<style>
  /* Enhanced Sidebar Styles */
  .bg-gradient-to-b {
    background: linear-gradient(to bottom, #f8fafc, #ffffff);
  }

  .hover\:bg-blue-50:hover {
    background-color: #ebf8ff; /* Light blue for hover */
  }

  /* Slightly larger shadow for profile pictures */
  .shadow-md {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  /* Enhanced button styles */
  .shadow-lg {
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
  }

  /* Button hover effects */
  .hover\:bg-blue-600:hover {
    background-color: #2563eb;
  }
</style>
