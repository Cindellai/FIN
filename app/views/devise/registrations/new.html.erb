<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "grid grid-cols-1 gap-6 mt-8 md:grid-cols-2" }) do |f| %>
  <%= f.error_notification %>
  <div>
    <%= f.label :first_name, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
    <%= f.text_field :first_name, placeholder: "First Name", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
  </div>

  <div>
    <%= f.label :last_name, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
    <%= f.text_field :last_name, placeholder: "Last Name", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
  </div>

  <div>
    <%= f.label :email, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
    <%= f.email_field :email, placeholder: "yourname@example.com", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
  </div>

  <div>
    <%= f.label :password, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
    <%= f.password_field :password, placeholder: "Enter your password", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
  </div>

  <div>
    <%= f.label :password_confirmation, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
    <%= f.password_field :password_confirmation, placeholder: "Confirm your password", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
  </div>

  <div class="col-span-2">
    <%= f.submit "Sign Up", class: "flex items-center justify-between w-full px-6 py-3 text-sm tracking-wide text-white capitalize transition-colors duration-300 transform bg-teal-600 rounded-md hover:bg-teal-600 focus:outline-none focus:ring focus:ring-teal-300 focus:ring-opacity-50" %>
  </div>
<% end %>
