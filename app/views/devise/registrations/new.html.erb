<section class="bg-white dark:bg-gray-900">
  <div class="flex justify-center min-h-screen">
    <!-- Left image section -->
    <div class="hidden bg-cover lg:block lg:w-3/4" style="background-image: url('<%= image_path('file.png') %>')">
    </div>

    <!-- Right form section -->
    <div class="flex items-center w-full max-w-3xl p-8 mx-auto lg:px-12 lg:w-3/5">
      <div class="w-full">
        <h1 class="text-2xl font-semibold tracking-wider text-gray-800 capitalize dark:text-white">
          Get your free account now.
        </h1>

        <p class="mt-4 text-gray-500 dark:text-gray-400">
          Letâ€™s get you all set up so you can verify your personal account and begin setting up your profile.
        </p>

    <div class="mt-6">
        <h1 class="text-gray-500 dark:text-gray-300">Select type of account</h1>
        <div class="mt-3 md:flex md:items-center md:-mx-2">
            <!-- Creator Button -->
            <button type="button" id="creatorBtn" class="flex items-center w-full px-6 py-3 text-teal-500 border border-teal-500 rounded-md md:w-auto md:mx-2 dark:border-blue-400 dark:text-blue-400 focus:outline-none" onclick="selectRole(true)">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span class="mx-2">Creator</span>
            </button>

            <!-- Novice Button (Initially Filled In) -->
            <button type="button" id="noviceBtn" class="flex items-center w-full px-6 py-3 mt-4 text-white bg-teal-500 rounded-md md:mt-0 md:w-auto md:mx-2 focus:outline-none" onclick="selectRole(false)">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span class="mx-2">Novice</span>
            </button>
        </div>
        </div>


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-class" }) do |f| %>
          <!-- Hidden Role Field -->
          <%= f.hidden_field :role, value: false, id: "user_role" %>

          <%= f.label :first_name, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
          <%= f.text_field :first_name, placeholder: "First Name", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>

          <%= f.label :last_name, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
          <%= f.text_field :last_name, placeholder: "Last Name", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>

          <%= f.label :username, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
          <%= f.text_field :username, placeholder: "Username", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>

          <%= f.label :email, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
          <%= f.email_field :email, placeholder: "Email", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>

          <%= f.label :password, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
          <%= f.password_field :password, placeholder: "Enter your password", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>

          <%= f.label :password_confirmation, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
          <%= f.password_field :password_confirmation, placeholder: "Enter your password again", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>

          <div class="mt-6">
            <%= f.submit "Sign Up", class: "w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-teal-600 rounded-lg hover:bg-gray-700 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-50" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</section>

<script>
  function selectRole(isCreator) {
    const roleField = document.getElementById('user_role');
    const creatorBtn = document.getElementById('creatorBtn');
    const noviceBtn = document.getElementById('noviceBtn');

    if (isCreator) {
      roleField.value = "true";  // Setting value to "true" as a string
      creatorBtn.classList.add('bg-teal-500', 'text-white');
      creatorBtn.classList.remove('text-teal-500', 'border', 'border-teal-500');
      noviceBtn.classList.remove('bg-teal-500', 'text-white');
      noviceBtn.classList.add('text-teal-500', 'border', 'border-teal-500');
    } else {
      roleField.value = "false";  // Setting value to "false" as a string
      noviceBtn.classList.add('bg-teal-500', 'text-white');
      noviceBtn.classList.remove('text-teal-500', 'border', 'border-teal-500');
      creatorBtn.classList.remove('bg-teal-500', 'text-white');
      creatorBtn.classList.add('text-teal-500', 'border', 'border-teal-500');
    }
  }
</script>
