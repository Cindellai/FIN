<!-- app/views/devise/sessions/new.html.erb -->
<section class="bg-white dark:bg-gray-900">
  <div class="flex justify-center min-h-screen">
    <!-- Left image section -->
    <div class="hidden lg:block lg:w-2/5">
      <%= image_tag('new.png', class: "w-full h-full object-cover", alt: 'Sign In Background Image') %>
    </div>

    <!-- Right form section -->
    <div class="flex items-center w-full max-w-3xl p-8 mx-auto lg:px-12 lg:w-3/5">
      <div class="w-full">
        <h1 class="text-2xl font-semibold tracking-wider text-gray-800 capitalize dark:text-white">
          Sign In to Your Account
        </h1>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8" }) do |f| %>
          <div>
            <%= f.label :email, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
            <%= f.email_field :email, autofocus: true, class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
          </div>

          <div class="mt-4">
            <%= f.label :password, class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "block w-full px-5 py-3 mt-2 text-gray-700 placeholder-gray-400 bg-white border border-gray-200 rounded-md dark:placeholder-gray-600 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-700 focus:border-blue-400 dark:focus:border-blue-400 focus:ring-blue-400 focus:outline-none focus:ring focus:ring-opacity-40" %>
          </div>

          <div class="mt-6 flex justify-between items-center">
  <div class="flex items-center">
    <%= f.check_box :remember_me, class: "form-checkbox h-4 w-4 text-teal-600 transition duration-150 ease-in-out" %>
    <%= f.label :remember_me, class: "ml-2 block text-sm text-left leading-5 text-gray-600 dark:text-gray-400" %>
            
          </div>
          <a href="<%= new_user_password_path %>" class="text-sm text-teal-600 hover:text-teal-700 focus:outline-none focus:underline transition ease-in-out duration-150">
              Forgot your password?
            </a>
          </div>


          <div class="mt-6">
            <%= f.submit "Sign In", class: "w-full px-6 py-3 text-white bg-teal-600 rounded-md hover:bg-teal-700 focus:outline-none focus:bg-teal-700" %>
          </div>
        <% end %>

        <div class="mt-6 text-center">
          <p class="text-gray-600 dark:text-gray-400">
            Don't have an account? 
            <a href="<%= new_user_registration_path %>" class="text-teal-600 hover:text-teal-700">Sign Up</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
