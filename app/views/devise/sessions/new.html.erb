<div class="flex w-full max-w-sm mx-auto overflow-hidden bg-white rounded-lg shadow-lg dark:bg-gray-800 lg:max-w-4xl">
    <div class="hidden bg-cover lg:block lg:w-1/2" style="background-image: url('<%= image_path('new.jpg') %>')">
    </div>

    <div class="w-full px-6 py-8 md:px-8 lg:w-1/2">
        <div class="flex justify-center mx-auto">
            <img class="w-auto h-7 sm:h-8" src="<%= image_path('FairTrade.png') %>" alt="">
        </div>

        <p class="mt-3 text-xl text-center text-gray-600 dark:text-gray-200">
            Welcome back!
        </p>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-class" }) do |f| %>
        
            <div class="mt-4">
                <%= f.label :email,  class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
                <%= f.email_field :email, class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
            </div>
            
            <div class="mt-4">
                <%= f.label :password,  class: "block mb-2 text-sm text-gray-600 dark:text-gray-200" %>
                <%= f.password_field :password, class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border rounded-lg dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 focus:ring-opacity-40 dark:focus:border-blue-300 focus:outline-none focus:ring focus:ring-blue-300" %>
            </div>
            
            <div class="flex items-center mt-4">
                <%= f.check_box :remember_me, class: "w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-400 dark:bg-gray-700 dark:border-gray-600" %>
                <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-600 dark:text-gray-200"%>
            </div>
        
            <div class="mt-6">
                <%= f.submit "Sign In", class: "w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-gray-800 rounded-lg hover:bg-gray-700 focus:outline-none focus:ring focus:ring-gray-300 focus:ring-opacity-50" %>
            </div>

        <% end %>
        
        <div class="mt-6 text-center">
            <p class="text-gray-600 dark:text-gray-400">
                Don't have an account? 
                <a href="<%= new_user_registration_path %>" class="text-teal-600 hover:text-teal-700">Sign Up</a>
            </p>
        </div>
    </div>
</div>
