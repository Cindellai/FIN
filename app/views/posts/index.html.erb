<div class="container mx-auto p-4">
  <h1 class="text-3xl font-semibold mb-6">All Posts</h1>
  <% @posts.each do |post| %>
    <div class="bg-gray-200 rounded-lg shadow p-4 mb-4">
      <h2 class="text-2xl font-semibold"><%= link_to post.title, post_path(post) %></h2>
      <p class="text-gray-600"><%= post.created_at.strftime("%B %d, %Y") %></p>
      <p class="text-gray-700"><%= truncate(post.body, length: 200) %></p>
      <% if post.url.present? %>
        <a href="<%= post.url %>" class="text-blue-500">Read more</a>
      <% end %>
      <% if current_user == post.user %>
        <div class="mt-2">
          <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-primary' %>
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
