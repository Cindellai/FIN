<div class="container mx-auto p-4">
  <div class="bg-white rounded-lg shadow p-4">
    <h2 class="text-2xl font-semibold">Edit Post</h2>
    <%= form_with(model: @post, local: true) do |form| %>
      <div class="mb-4">
        <%= form.label :title, class: 'block text-gray-700' %>
        <%= form.text_field :title, class: 'form-input mt-1 block w-full' %>
      </div>
      <div class="mb-4">
        <%= form.label :body, class: 'block text-gray-700' %>
        <%= form.text_area :body, class: 'form-input mt-1 block w-full' %>
      </div>
      <div class="mb-4">
        <%= form.label :url, class: 'block text-gray-700' %>
        <%= form.text_field :url, class: 'form-input mt-1 block w-full' %>
      </div>
      <div class="flex items-center">
        <%= form.submit 'Update Post', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
