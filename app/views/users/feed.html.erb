<div class="min-h-screen" style="background-color: rgb(243, 241, 224);">
  <div class="container mx-auto pt-16 flex w-full px-4"> <!-- Added px-4 for padding -->

    <!-- Sidebar (Hidden on small screens) -->
    <div class="hidden md:block w-1/4 pt-2 pr-2">
      <%= render 'shared/sidebar', user: current_user %>
    </div>

    <!-- Posts Section (Takes full width on small screens) -->
    <div class="w-full md:w-2/3 pt-8"> <!-- Adjusted width to 2/3 to give space to the right column -->
      <% if @posts.any? %>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="flex flex-col space-y-2">
            <% @posts.each do |post| %>
              <%= render 'posts/post_card', post: post %>
            <% end %>
          </div>
        </div>
      <% else %>
        <p class="text-gray-700">No posts available.</p>
      <% end %>
    </div>

    <!-- Trending Topics & Who to Follow Sections (Sticky and hidden on small screens) -->
    <div class="hidden md:block w-1/3 pt-2 pl-4"> <!-- Added pl-4 for padding to the left -->
      <div class="sticky top-16">
        <%= render 'shared/trending' %>
        <!-- Who to Follow Section with shortened height -->
        <div class="mt-4 max-h-60 overflow-y-auto">
          <%= render 'shared/WTK' %>
        </div>
      </div>
    </div>
  </div>
</div>
