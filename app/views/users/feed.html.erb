<!-- app/views/posts/feed.html.erb -->
<div class="bg-gray-100 min-h-screen font-playfair">
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-semibold mb-4">Feed</h1>
    
    <% @posts.each do |post| %>
      <%= render 'posts/post_card', post: post %>
    <% end %>
    
    <% if @posts.empty? %>
      <p class="text-gray-700">No posts available.</p>
    <% end %>
  </div>
</div>
