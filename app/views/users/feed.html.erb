<!-- app/views/users/feed.html.erb -->
<div class="flex min-h-screen">
  <!-- Sidebar -->
  <%= render 'shared/sidebar', user: current_user %>
  
  <!-- Main Content -->

    <!-- Search Bar -->
    <div class="w-3/4 ml-8">
    <div class="bg-teal-500 bg-opacity-25 shadow-lg p-4">
      <div class="container mx-auto flex justify-center">
        <input type="text" placeholder="Search the top investors ..." class="input input-bordered w-full max-w-2xl">
      </div>
    </div>
    
    <!-- Feed Content -->
    <div class="container mx-auto p-4 mt-8"> <!-- mt-8 for spacing -->
      <% if @posts.present? && @posts.any? %>
        <% @posts.each do |post| %>
          <%= render 'posts/post_card', post: post %>
        <% end %>
      <% else %>
        <p class="text-gray-700 text-center">No posts available.</p>
      <% end %>
    </div>
  </div>
</div>
