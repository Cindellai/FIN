<div class="container mx-auto p-4">
  <%= render 'profile', user: @user %>
  
  <div class="mt-4">
   
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <%= render 'posts/post_card', post: post %>
      <% end %>
    <% else %>
      <p class="text-gray-700">No posts available.</p>
    <% end %>
  </div>
</div>
