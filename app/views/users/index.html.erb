<h1>All Users</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Role</th>
      <th>Profile</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= user.role ? 'Trader' : 'Student' %></td>
        <td><%= link_to 'View Profile', user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
